<% provide(:title, 'All folders') %>
<h1>All folders</h1>
<% for folder in @folders %>
	<li>
		<%= folder.name %>
		<% if current_user?(folder.user) %>
			|	<%= link_to "delete", folder, method: :delete,
										  data: { confirm: "You sure?"},
										  title: folder.name %>
		    |   <%= link_to "edit", edit_folder_path(folder) %>
		<% end %>
	</li>
<% end %>