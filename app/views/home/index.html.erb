<h1>Sample App</h1>
<% if signed_in? %>
	<% for folder in @folders %>
		<li>
			<%= folder.name %>
			<% if current_user?(folder.user) %>
				|	<%= link_to "delete", folder, method: :delete,
										  data: { confirm: "You sure?"},
										  title: folder.name %>
		    	|   <%= link_to "edit", edit_folder_path(folder) %>
			<% end %>
		</li>
	<% end %>
	<% for document in @documents %>
		<li>
			<%= link_to document.file_name, document %>
			<% if current_user?(document.user) %>
				|	<%= link_to "delete", document, method: :delete,
													data: { confirm: "You sure?"},
													title: document.file_name %>
				|	<%= link_to "download", download_path(document) %>
			<% end %>
		</li>
	<% end %>
<% else %>
	<p>This is the home page.</p>
	<%= link_to "Sign up now!", signup_path %>
<% end %>